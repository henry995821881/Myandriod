<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    
    <RelativeLayout
        
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:background="#FFFFFF" >

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/henry_mystatus_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/com_sina_weibo_sdk_login_button_with_original_logo" />

        <LinearLayout
            android:id="@+id/henry_mine_status_head_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/henry_mystatus_icon"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/henry_mine_status_myname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
             
                android:textColor="@color/henry_orange" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/henry_mine_status_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="12:32"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/henry_mine_status_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="来自： "
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/henry_mine_status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/henry_mine_status_head_ll"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
          />

        <RelativeLayout
            android:id="@+id/henry_mine_re_status_ll"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/henry_mine_status_text"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:background="@color/henry_a_gray"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/henry_re_mine_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:scaleType="fitXY"
                android:src="@drawable/com_sina_weibo_sdk_login_button_with_original_logo" />

            <TextView
                android:id="@+id/henry_re_mine_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@id/henry_re_mine_image"
                android:gravity="center"
                android:singleLine="false"
               android:textSize="10sp"/>
        </RelativeLayout>

        
        
        <View
            android:id="@+id/henry_line_option_above"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/henry_mine_re_status_ll"
            android:layout_marginTop="10dp"
            android:background="@color/henry_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/henry_line_option_above"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/henry_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:paddingLeft="80dp" >

                <CheckBox
                    android:id="@+id/henry_mine_status_transmit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@null"
                    android:button="@null"
                    android:drawableLeft="@drawable/henry_frag_host_item_transmit1"
                    android:drawablePadding="10dp"
                    android:text="29" />

                <CheckBox
                    android:id="@+id/henry_mine_status_comment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@null"
                    android:button="@null"
                    android:drawableLeft="@drawable/henry_frag_host_item_comment"
                    android:drawablePadding="10dp"
                    android:text="29" />

                <CheckBox
                    android:id="@+id/henry_mine_status_zan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@null"
                    android:button="@null"
                    android:drawableLeft="@drawable/button_check_thum"
                    android:drawablePadding="10dp"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>